<% provide(:title, 'new') %>
 
<div class="modal-dialog">
  <!-- モーダル表示内容 -->
  <div class="modal-content">
    <!-- モーダル：ヘッダー部 -->
    <div class="modal-header">
      <h1 class="modal-title">拠点情報の追加</h1>
      <!-- 「×ボタン」 -->
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_with(model: @base, local: true, method: :post) do |f| %>

        <%= f.label "拠点番号", class: "label-#{yield(:class_text)}" %>
        <%= f.number_field :base_no, class: "form-control" %>
    
        <%= f.label "拠点名", class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_name, class: "form-control" %>

        <%= f.label "勤務種類", class: "label-#{yield(:class_text)}" %><br>

        <div class="form-select">
          <%= f.select :attendance_type, ["出勤", "リモート"], {include_blank: "選択してください"}, class: "form-control" %>
        </div>

        <%= f.submit "拠点追加", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
      <% end %>
    </div>
  </div>