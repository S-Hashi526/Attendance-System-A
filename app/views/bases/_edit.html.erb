<% provide(:title, 'Edit') %>

<div class="modal-dialog">
  <!-- モーダル表示内容 -->
  <div class="modal-content">
    <!-- モーダル：ヘッダー部 -->
    <div class="modal-header">
      <h1 class="modal-title">拠点編集</h1>
      <!-- 「×ボタン」 -->
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_with(model: @base, url: basis_path(@base), local: true) do |f| %>
  
        <%= f.label :base_no, class: "label-#{yield(:class_text)}" %>
        <%= f.number_field :base_no, class: "form-control", min: 1, max: 100 %>

        <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :base_name, class: "form-control" %>

        <%= f.label :attendance_type, class: "label-#{yield(:class_text)}" %><br>
        <%= f.select :attendance_type, ["出勤", "リモート"], {include_blank: "選択してください"}, class: "form-control" %>

        <div class="center">
          <%= f.submit "更新", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
        </div>
      <% end %>
    </div>
  </div>
</div>